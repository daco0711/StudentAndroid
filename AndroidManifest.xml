<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentaplikacija"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AddStudentActivity"
            android:label="@string/title_activity_add_student" >
        </activity>
        <activity
            android:name=".DeleteStudentMainActivity"
            android:label="@string/title_activity_delete_student_main" >
        </activity>
        <activity
            android:name=".SearchStudentMainActivity"
            android:label="@string/title_activity_search_student_main" >
        </activity>
        <activity
            android:name=".UpdateMainActivity"
            android:label="@string/title_activity_update_main" >
        </activity>
        <activity
            android:name=".EnterActivity"
            android:label="@string/title_activity_enter" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeleteActivity"
            android:label="@string/title_activity_delete" >
        </activity>
    </application>

</manifest>
